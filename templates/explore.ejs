<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/base_theme.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/css/explore.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <%- include('partials/navbar') %>

    <% imgUrl = "/images/explore.jpg" %> 
    <% imageText = "Explore" %> 

    <%- include('partials/bgImageWithText') %>

    <section>
        <div class="container">
            <% places.forEach(place => { %>
                <div class="item">
                    <div class="placeId"><%= place._id%></div>
                    <div class="imgBg" style="--img: url(<%= place.images[0]%>)"></div>
                    <div class="details">
                        <div class="placeName"><%= place.name %></div>
                        <div class="placeFact"><%= place.fact %></div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script src="/js/explore.js"></script>
</body>

</html>